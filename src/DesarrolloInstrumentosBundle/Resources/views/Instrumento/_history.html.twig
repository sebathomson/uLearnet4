<table class="table table-condensed">
	<thead>
		<tr>
			<th>#</th>
			<th>Fecha</th>
			<th>Estado</th>
			<th>Usuario</th>
			<th>Observación</th>
		</tr>
	</thead>
	<tbody>
		{% for historial in arrHistorial %}
			<tr>
				<td>{{ loop.index }}</td>
				<td>{{ historial.fechaInstrumento | date('Y-m-d H:i:s') }}</td>
				<td>
					<span class="label label-{% if historial.idEstado == 1 %}info{% elseif historial.idEstado == 4 %}success{% else %}warning{% endif %}">
						{{ historial.nombreEstado }}
					</span>
				</td>
				<td>
					{{ historial.nombresUsuario }} {{ historial.apellidoPaternoUsuario }} {{ historial.apellidoMaternoUsuario }}
				</td>
				<td>
					{{ historial.observacionInstrumento | default('Sin Observación') }}
				</td>
			</tr>		
		{% endfor %}
	</tbody>
</table>